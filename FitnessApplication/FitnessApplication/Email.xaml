<Window x:Class="FitnessApplication.Email"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessApplication"
        mc:Ignorable="d"
        Title="EmailChange" Height="200" Width="250">
    <Grid>
        <Label FontStyle="Normal" FontStretch="UltraCondensed"  Background="GhostWhite" Content="Enter the new email :" HorizontalAlignment="Left" Height="29" Margin="36,28,0,0" VerticalAlignment="Top" Width="131"/>
        <TextBox FontStyle="Normal" FontStretch="UltraCondensed"  Background="GhostWhite" x:Name="EmailBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="80,62,0,0"/>
        <Button FontStyle="Normal" FontStretch="UltraCondensed"  Background="GhostWhite" Content="OK" HorizontalAlignment="Left" Margin="80,141,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.107,0.556" Click="Button_Click"/>
        <Button FontStyle="Normal" FontStretch="UltraCondensed"  Background="GhostWhite" Content="Cancel" HorizontalAlignment="Left" Margin="163,141,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
