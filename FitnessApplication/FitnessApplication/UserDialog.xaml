<Window x:Class="FitnessApplication.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessApplication"
        mc:Ignorable="d"
        Title="UserDialog" Height="250" Width="300" FontFamily="Cambria" FontSize="12">
    <StackPanel>
        <TextBox x:Name="ReadOnly" IsReadOnly="True" HorizontalAlignment="Left" Height="24" Margin="25,30,0,0" TextWrapping="Wrap" Text="Enter the new username : " VerticalAlignment="Top" Width="149"/>
        <TextBox x:Name="ChangedUser" HorizontalAlignment="Left" Height="25" Margin="100,40,0,10" TextWrapping="Wrap" Width="162"/>
        <Button FontStyle="Normal" FontStretch="UltraCondensed" FontSize="15" Background="GhostWhite" Content="OK" Height="22" Margin="117,25,99.333,25" Click="Button_ClickOK"/>
        <Button FontStyle="Normal" FontStretch="UltraCondensed" FontSize="15" Background="GhostWhite" Content="CANCEL" Height="22" Margin="207,-58,21.333,15" Click="Button_ClickCancel"/>

    </StackPanel>
</Window>
